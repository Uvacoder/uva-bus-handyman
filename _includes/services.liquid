<h2 class="tc f2-ns">Services</h2>

<div class="cf">
	{% for service in site.data.services %}
		<div class="fl-ns w-50-ns mb3 mb0-ns pa2 {% cycle 'cl pr3', 'pl3' %}">
			{% if service.icon %}
				<div class="center mb3" style="width: 40px; height: 40px;">
					{% include svg/{{service.icon}} %}
				</div>
			{% endif %}

			<h3 class="f5">{{ service.title }}</h3>
			<ul class="list pa0 lh-copy f5">
				{% for item in service.list %}
					<li>{{ item }}</li>
				{% endfor %}
			</ul>

		</div>
	{% endfor %}
</div>
